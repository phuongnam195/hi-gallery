<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.VaultAlbumActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/btnEncrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encrypto" />

            <Button
                android:id="@+id/btnDecrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decrypto"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/btnEncryptAndSaveFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En And Save" />

            <Button
                android:id="@+id/btnDecryptAndOpenFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De And Open"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvStringOfImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/ivImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>