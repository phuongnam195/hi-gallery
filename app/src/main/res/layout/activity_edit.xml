<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Photo Editor"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"></TextView>

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Select image"></Button>

        <Button
            android:id="@+id/takePhotoButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Take photo"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/editScreen"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/filtersGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ðŸ”™"
                android:layout_marginRight="20px"
                android:id="@+id/backButton"/>

            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3.5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <Button
                        android:id="@+id/blackAndWhite"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="B/W"
                        android:layout_marginRight="10px"
                        android:layout_marginLeft="10px"/>

                    <Button
                        android:id="@+id/negative"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="âš¡"
                        android:layout_marginRight="10px"
                        android:layout_marginLeft="10px"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/brightness"
                        android:text="ðŸ”†"
                        android:layout_marginRight="10px"
                        android:layout_marginLeft="10px"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/warm"
                        android:text="ðŸŸ§"
                        android:layout_marginRight="10px"
                        android:layout_marginLeft="10px"/>

                </LinearLayout>


            </HorizontalScrollView>





            <Button
                android:id="@+id/saveImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20px"
                android:text="â˜‘"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/UpDown">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”™"
                android:id="@+id/backToFilter"
                android:layout_marginRight="60px"
                android:layout_marginLeft="60px"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="up"
                android:id="@+id/up"
                android:layout_marginRight="60px"
                android:layout_marginLeft="60px"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="down"
                android:id="@+id/down"
                android:layout_marginRight="60px"
                android:layout_marginLeft="60px"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>